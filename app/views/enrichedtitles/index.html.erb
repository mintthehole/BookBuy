<div class="span-24 last">
	<%= form_tag enrichedtitles_path, :id => 'searchForm', :method => 'get' do -%>
			<%= field_set_tag 'ISBN' do %>		
  			<span>Enter the isbn.
  			</span>
  			<br/>
  			<%= label_tag 'ISBN'%>
  			<%= text_field_tag :queryISBN, params[:queryISBN] %>
  			<%= submit_tag "Submit", :name => nil %>
			<% end -%>
	<% end -%>
</div>

<div class="span-24 last">
	<%= form_tag enrichedtitles_path(:format => :csv), :id => 'exportForm', :method => 'get' do -%>
			<%= field_set_tag 'Export' do %>
			  <%= select_tag(:file_id, options_for_select(SAP::EXPORT_FORMATS), {:include_blank => true}) %>
  			<%= submit_tag "Submit", :name => nil %>
			<% end -%>
	<% end -%>  
</div>