<div class="span-24 last">
  <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this title from being saved:</h2>

        <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class='span-10'>
      <table class='no-zebra'>
        <tr>
          <th>Book Tag</th>
          <td><%= @book.book_tag_number %></td>
        </tr>
        <tr>
          <th>Book Number</th>
          <td><%= @book.booknumber %></td>
        </tr>
        <tr>
          <th>Title ID</th>
          <td><%= f.text_field :titleid, :maxlength => 13, :size => 20 %></td>
        </tr>
      </table>
    
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>

    <div class='span-5'>
      <%= image_tag @et.cover.url, :size => "75X150" unless @et.nil? %>
    </div>
    
    <div class='span-7 last'>
      <% unless @book.title.nil? -%>
        <% if @book.title.in_core_list? %>
          <%= label_tag :title_id %> <%= @book.title.id %><br/>
          <%= label_tag :title %> <%= @book.title.title %><br/>
          <%= label_tag :author %> <%= @book.title.try(:author).try(:name) %><br/>
          <%= label_tag :category %> <%= @book.title.category.try(:name) %><br/>
          <% if @book.changed? -%>
            <%= label_tag :terms_of_update %> <%= f.check_box :terms_of_update, :maxlength => 13, :size => 20 %>
          <% end -%>
        <% end -%>
      <% end -%>
    </div>
    
    
  <% end %>      
</div>