<div class="span-24 last">
	<%= form_tag noisbntitles_path, :id => 'searchForm', :method => 'get' do -%>
			<%= field_set_tag 'TITLE ID' do %>		
			<span>Enter the Title ID.
			</span>
			<br/>
			<%= label_tag 'Title ID'%>
			<%= text_field_tag :queryTitleID, params[:queryTitleID] %>
			<%= submit_tag "Submit", :name => nil %>
			<% end -%>
	<% end -%>
</div>

<div class="span-24 last">
	<%= form_tag noisbntitles_path(:format => :csv), :id => 'exportForm', :method => 'get' do -%>
			<%= field_set_tag 'Export' do %>
  		  <%= select_tag :language, options_for_select(Language.all.collect {|p| ["#{p.short_name}:#{p.name}",p.name] }) %>
  		  <br/>			
			  <%= select_tag(:file_id, options_for_select(SAP::EXPORT_FORMATS), {:include_blank => true}) %>
  			<%= submit_tag "Submit", :name => nil %>
			<% end -%>
	<% end -%>  
</div>